# ============================================
# YQPAY Frontend Environment Configuration
# ============================================
# Copy this file to .env and update the values
# Note: Vite requires all environment variables to start with VITE_

# ============================================
# API CONFIGURATION
# ============================================
# Backend API URL
# Development: http://localhost:8080/api
# Production: https://yqpaynow.com/api or https://your-backend-url.com/api
VITE_API_URL=http://localhost:8080/api
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# ============================================
# APPLICATION CONFIGURATION
# ============================================
VITE_APP_NAME=YQPayNow
VITE_APP_VERSION=2.0.0
# Base URL where your frontend is hosted
VITE_APP_BASE_URL=http://localhost:3000

# ============================================
# BRANDING & THEME
# ============================================
VITE_PRIMARY_COLOR=#6B0E9B
VITE_SECONDARY_COLOR=#F3F4F6
VITE_LOGO_URL=/logo.png
VITE_FAVICON_URL=/favicon.ico
VITE_COMPANY_NAME=YQPayNow

# ============================================
# AUTHENTICATION
# ============================================
# Local storage keys
VITE_TOKEN_KEY=yqpaynow_token
VITE_REFRESH_TOKEN_KEY=yqpaynow_refresh_token
VITE_USER_KEY=yqpaynow_user
# Session timeout in milliseconds (1 hour = 3600000)
VITE_SESSION_TIMEOUT=3600000
# Auto logout warning in milliseconds (5 minutes = 300000)
VITE_AUTO_LOGOUT_WARNING=300000

# ============================================
# PAYMENT GATEWAYS (Optional)
# ============================================
# Stripe
VITE_STRIPE_PUBLIC_KEY=

# PayPal
VITE_PAYPAL_CLIENT_ID=
VITE_PAYPAL_CURRENCY=USD

# Razorpay (for India)
VITE_RAZORPAY_KEY_ID=
VITE_RAZORPAY_CURRENCY=INR

# ============================================
# STORAGE & UPLOADS
# ============================================
# Max file size in bytes (5MB = 5242880)
VITE_MAX_FILE_SIZE=5242880
# Comma-separated list of allowed MIME types
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# ============================================
# FEATURE FLAGS
# ============================================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_TRACKING=false
VITE_ENABLE_CHAT=false
VITE_ENABLE_NOTIFICATIONS=true

# ============================================
# GOOGLE SERVICES (Optional)
# ============================================
VITE_GOOGLE_MAPS_API_KEY=
VITE_GOOGLE_ANALYTICS_ID=

# ============================================
# DEVELOPER OPTIONS
# ============================================
VITE_DEBUG_MODE=false
VITE_SHOW_API_ERRORS=true
